$width = 800px
$grey = rgba(125, 125, 125, 0.2)
$normalSpeed = 1s
$fastSpeed = 0.3s

// color pallete
$primaryDark = #e56e18
$primary = #fe7d21
$primaryLight = #fed7bb
$accent = #008695
$icon = #fff
$textPrimary = #202020
$textSecondary = #717171
$divider = #b5b5b5
$page = #EBEBEB

transition()
	 -webkit-transition arguments
    transition arguments

column-count()
	-webkit-column-count arguments
	-moz-column-count arguments
	column-count arguments

transform()
    -ms-transform arguments
    -webkit-transform arguments
    -moz-transform arguments
	-ms-transform arguments
	-o-transform arguments
    transform arguments

box-shaodw()
	box-shadow arguments
    -moz-box-shadow arguments
    -webkit-box-shadow arguments

html 
	overflow-x hidden

body
	margin 0
	padding 0
	font 400 16px/1.5 'Open Sans', sans-serif
	box-sizing: border-box;
	color $textPrimary
	background-color $page
	a
		white
		text-decoration none

.dark
	color white

#hero-wrapper
	width 100%
	min-height 300px
	background-color #242424
	transition height $normalSpeed ease-in
	overflow hidden

#content-wrapper
	max-height 0
	overflow hidden
	//transition $normalSpeed ease-in
	opacity 0
#content-wrapper.filled
	max-height 20000px
	margin 40px auto
	opacity 1

.content
	box-shadow 0 3px 10px rgba(0,0,0,0.05)
	display block
	background-color $icon
	padding-bottom 15px
	h1
		padding 50px 50px 0
	p
		padding 5px 50px 15px
	img
		margin 20px 100px
		max-width calc(100% - 200px)
		box-shadow 0 3px 10px rgba(0,0,0,0.3)
	a
		font-weight 600
		color $accent

.header 
	background rgb(254, 125, 33)
	box-shadow rgba(0, 0, 0, 0.2) 0px 9px 18px 0px
	float left
	padding 0 0 10px
	position relative
	width 100%
	margin 0 0 50px 0
	color $icon
	p
		font-size 14px
		margin 0

#other-studies
	margin-top 30px
	display block
	height 100%
	overflow hidden


.ext-study 
	box-shadow 0 3px 10px rgba(0,0,0,0.05)
	background-color white
	@media (min-width: 600px)
		width 250px
		margin-right 25px
		font-size 14px
	height 100%
	float left
	display block
	h1
		margin 40px 30px 0
		transition margin $fastSpeed
	p
		margin 0 30px 15px
	a
		font-weight 600
		color $accent
		text-decoration none
		&:hover
			text-decoration underline
	&:last-child
		margin-right 0
	img
		max-width 100%
		margin 0 0 -40px
		transition margin $fastSpeed
	&:hover
		h1
			margin-top 10px
		img
			margin 0 0 -10px

#call-to-action
	display block
	margin-top 100px
#footer
	padding 40px
	padding-top 60px
	background-color #242424
	color white
	font-size 12px
	h1
		font 600 20px/0.8 'Open Sans', sans-serif

.three-col
	@media (min-width: $width)
		-webkit-column-count 3
		-moz-column-count 3
		column-count 3

.fullpage
	width 100%
	max-width $width
	height auto
	display block
	margin auto

// Nav
#nav-wrapper
	z-index 900
	width 100%
	height 80px
	position fixed
	z-index 10
	background-color white
	box-shadow 0 3px 5px rgba(0,0,0,0.1)
	visibility hidden
	opacity 0
	transition opacity $fastSpeed transform $fastSpeed
	animation  1.2s
	transform-origin: 50% 100%;
	transform: rotateX(180deg);
	display: inline-block;
	&.down
		visibility visible
		opacity 1
		transform: rotateX(0deg);

#nav
	height 100%
	max-width $width
	margin auto
	position relative

#nav-logo
	float right
	width 100px
	margin 20px 50px 0 0
	position relative

#top-menu
	float left
	padding 10px 0 0 40px
	margin 0
	list-style none
	a
		color $textPrimary
		text-decoration none
		font-weight 600
		&:hover
			border-bottom 1px solid $textPrimary
	li
		float left
		padding 30px 10px

#menu-btn
	z-index 999
	position fixed
	width auto
	height auto
	border 1px solid $textPrimary
	padding 10px 15px
	top 20px
	left 20px
	color $textPrimary
	background-color $icon
	text-decoration none
	border-radius 10px
	transition $fastSpeed
	&:hover
		color $icon
		background-color $textPrimary
		border 1px solid $icon


