input[type=button] 
	background-color: #fff;
	border: 1px solid #9daca9;
	border-radius: 4px;
	font: inherit;
	letter-spacing: inherit;
	text-indent: inherit;
	color: inherit;

#logo
	width 90%
	max-width 400px
	position relative
	top 40%
	left 50%
	transform translate(-55%, -50%)
	display block


video, #hero-slider
	position relative
	top 50%
	left 50%
	transform translate(-50%, -50%)
	min-width 100%
	min-height 100%
	width auto
	height auto
	display block
	visibility visible
	opacity 1

#vid-wrapper
	margin-top -300px

#vid-controller-wrapper
	position absolute
	top 0
	left 0
	width 100%
	height 60%
	background-color rgba(0,0,0,0.5)
	opacity 0.2
	transition opacity $slowSpeed ease-out
	z-index 101
	display block
	div
		transition opacity $slowSpeed ease-out, top $slowSpeed ease-out
		opacity 0
		top 70%
	&:hover
		opacity 1
		div
			opacity 1
			top 80%
#vid-controller
	height auto
	width 340px
	position relative
	margin auto
	display block
	font-size 40px
	letter-spacing 20px
	a
		color white
		text-decoration none
		&:hover
			opacity 0.6

.invisible
	opacity 0
	visibility hidden

#hero-text
	position absolute
	left 0
	right 0
	margin auto
	bottom 15%
	color $primary
	z-index 999
	text-align center
	font-size 24px
	text-shadow: 0 0 2px rgba(20,20,20,0.8);
	a
		color $primary
		text-decoration none
		&:hover
			color $accent
#slide-wrapper
	height 100%
	width 100%
.chrome-sticky
	-webkit-transform translateZ(0)
	

.fa-arrow-right-after:after {
  content: "\f061";
}

#description-icons
	height 100%
	width 70px
	font-size 50px
	position absolute
	margin-left 0
	margin-top 50px
	text-align center


#description
	background-color transparent
	margin-bottom 50px
	margin-top -20px
	p, h1
		padding-left 100px
